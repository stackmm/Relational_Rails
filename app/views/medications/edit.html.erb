<h1>Edit: <%= @medications.name %></h1></br>
<form action="/medications/<%= @medications.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <label>Medication:</label>
  <input type='text' id="name" name='name' value="<%=@medications.name%>" required><br><br>
  <label>Strength:</label>
  <input type='text' id="strength" name='strength' value="<%=@medications.strength%>" required><br><br>
  <label>Dosage Form:</label>
  <input type='text' id="dosage_form" name='dosage_form' value="<%=@medications.dosage_form%>" required><br><br>
  <label>Quantity:</label>
  <input type='number' id="quantity" name='quantity' value="<%=@medications.quantity%>" required><br><br>
  In Stock:
  <input type='radio' name='in_stock' value =true id = "true" required <%= @medications.in_stock ? "checked":"" %>/>
  <label for ="in_stock">True</label>
  <input type='radio' name='in_stock' value =false id = "false" required <%= !@medications.in_stock ? "checked":"" %>/>
  <label for ="in_stock">False</label><br><br>
  <input type="submit" value="Update Medication"/>
</form><br>
<span><a href="/medications/<%=@medications.id%>">Back</a></span>